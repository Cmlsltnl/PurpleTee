<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Signup</title>
    
    <% include ../partials/header.ejs %>

</head>
<body>

    <% include ../partials/navbar.ejs %>

    <div class="container mt-4">
        <% if(errors.length){ %>
            <div class="alert alert-danger alert-dismissable fade show">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        &times; <!--  x button -->
                    </span>
                </button>
                <%= errors%>
            </div>
        <% } %>

        <h2>Signup</h2>
        <form action="/signup" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" name="name" placeholder="Name" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="username" pattern="[a-zA-Z0-9_]+" placeholder="Username (alphabets, digits, and underscore only)" required>
            </div>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="address" placeholder="Address">
            </div>
            <div class="form-group">
                <div class="form-control">
                    <label for="profile">Profile Picture</label><br>
                    <input type="file" accept="image/*" name="profilePic" id="profile">
                    <small class="form-text text-muted">Preferably a square image.</small>
                    <input type="checkbox" class="my-3" name="orientation"> Tick this if image is Potrait.
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>
