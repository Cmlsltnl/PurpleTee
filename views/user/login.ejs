<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    
    <% include ../partials/header.ejs %>
    <script src="js/user/showPwd.js"></script>

</head>
<body>

    <% include ../partials/navbar.ejs %>

    <div class="container mt-4">
        <% if(message.length){ %>
            <div class="alert alert-danger alert-dismissable fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        &times; <!--  x button -->
                    </span>
                </button>
                <%= message%>
            </div>
        <% } %>
        <% if(successMsg.length){ %>
            <div class="alert alert-success alert-dismissable fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">
                        &times; <!--  x button -->
                    </span>
                </button>
                <%= successMsg%>
            </div>
        <% } %>
        
        <h2>Login</h2>
        <form action="/login" method="post">
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
            </div>
            <div class="form-group input-group">
                <input type="password" class="form-control" name="password" placeholder="Password" id="pwd" required>
                <div class="input-group-addon showPwd">
                    <div class="input-group-text px-2" id="iconDiv"><i class="fa fa-eye" aria-hidden="true"></i></div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>
